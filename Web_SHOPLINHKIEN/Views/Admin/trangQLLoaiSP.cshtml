@model IEnumerable<Web_SHOPLINHKIEN.Models.LOAISANPHAM>

@{
    ViewBag.Title = "trangQLLoaiSP";
    Layout = "~/Views/Shared/_Layout_trangAdmin.cshtml";
}

<div class="span9">
    <ul class="breadcrumb">
        <li><a href="@Url.Action("trangChuAdmin", "Admin")">Trang chủ Admin </a> <span class="divider">/</span></li>
        <li class="active">Quản lý loại sản phẩm</li>
    </ul>
    <h3>DANH SÁCH LOẠI SẢN PHẨM</h3>
    <a href="@Url.Action("trangQLLoaiSP_themmoi", "Admin")" class="btn btn-large"> Thêm mới</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Mã loại sản phẩm</th>
                <th>Tên loại sản phẩm</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                
                using (Html.BeginForm("trangQLLoaiSP", "Admin", FormMethod.Post))
                {
                    @Html.ValidationSummary(true)
                    @Html.AntiForgeryToken()
                    <tr>
                        <td><input type="text" id="ma" name="ma" value="@item.MaLoaiSP.Trim()" readonly /></td>
                        <td>
                            <input type="text" id="ten" name="ten" value="@item.TenLoaiSP.Trim()" maxlength="50" minlength="5" placeholder="Nhập tên loại sản phẩm" />
                            <p><strong style="color:darkred;">@ViewData["loiten"+item.MaLoaiSP.Trim()]</strong></p>
                        </td>
                        <td>
                            <div class="input-append">
                                <button class="btn" type="submit">CẬP NHẬT</button>
                                
                                    <button class="btn btn-danger" type="button" onclick="window.location.href='@Url.Action("trangQLLoaiSP_xoa", "Admin", new { id = item.MaLoaiSP.Trim() })'">
                                        <i style="color:white;" class="icon-remove icon-white"></i>
                                        </button>
                                
                            </div>
                        </td>
                    </tr>
                }
            }
            <tr>
            </tr>
        </tbody>
    </table>
</div>