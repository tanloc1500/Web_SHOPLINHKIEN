<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Cửa hàng linh kiện PC STAR &reg;</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!--Less styles -->
    <!-- Other Less css file //different less files has different color scheam
     <link rel="stylesheet/less" type="text/css" href="/Content/themes/less/simplex.less">
     <link rel="stylesheet/less" type="text/css" href="/Content/themes/less/classified.less">
     <link rel="stylesheet/less" type="text/css" href="/Content/themes/less/amelia.less">  MOVE DOWN TO activate
     -->
    <!--<link rel="stylesheet/less" type="text/css" href="/Content/themes/less/bootshop.less">
    <script src="/Content/themes/js/less.js" type="text/javascript"></script> -->
    <!-- Bootstrap style -->
    <link id="callCss" rel="stylesheet" href="/Content/themes/bootshop/bootstrap.min.css" media="screen" />
    <link href="/Content/themes/css/base.css" rel="stylesheet" media="screen" />
    <!-- Bootstrap style responsive -->
    <link href="/Content/themes/css/bootstrap-responsive.min.css" rel="stylesheet" />
    <link href="/Content/themes/css/font-awesome.css" rel="stylesheet" type="text/css">
    <!-- Google-code-prettify -->
    <link href="/Content/themes/js/google-code-prettify/prettify.css" rel="stylesheet" />
    <!-- fav and touch icons -->
    <link rel="shortcut icon" href="/Content/themes/images/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="/Content/themes/images/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="/Content/themes/images/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="/Content/themes/images/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="/Content/themes/images/ico/apple-touch-icon-57-precomposed.png">
    <style type="text/css" id="enject"></style>
</head>
<body>
    <div id="header">
        <div class="container">
            <!-- Navbar ================================================== -->
            <div id="logoArea" class="navbar">
                <a id="smallScreen" data-target="#topMenu" data-toggle="collapse" class="btn btn-navbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <div class="navbar-inner">
                    <a class="brand" href="@Url.Action("trangChu", "Guest")"><img src="/Content/themes/images/logo.png" alt="STARshop" /></a>
                    @using (Html.BeginForm("trangTimKiem", "Guest", FormMethod.Post, new { @class = "form-inline navbar-search" }))
                    {
                        <input id="srchFld" name="srchFld" class="srchTxt" type="text" />
                        <button type="submit" id="submitButton" class="btn btn-primary">Tìm kiếm</button>
                    }
                <ul id="topMenu" class="nav pull-right">

                    @if (Session["user"] != null)
                    {
                        <li>
                            <a href="@Url.Action("trangThongTinTaiKhoan", "UserQLTaiKhoan")">Quản lý tài khoản</a>
                        </li>
                        <li>
                            <a href="@Url.Action("trangLSMuaHang", "UserLSMuaHang")">Lịch sử mua hàng</a>
                        </li>
                    }
                    <li class="">
                        <a id="myCart" href="@Url.Action("GioHang", "GioHang")">
                            <img src="/Content/themes/images/ico-cart.png" alt="cart">
                            @Html.Action("GioHangPartial", "GioHang")
                        </a>
                    </li>
                    @if (Session["user"] != null)
                    {
                        <li class="">
                            <a href="@Url.Action("dangxuat", "User")" style="padding-right:0"><span class="btn btn-large btn-success">Đăng xuất</span></a>
                        </li>
                    }
                    else
                    {
                        <li class="">
                            <a href="@Url.Action("trangDangNhap", "User")" style="padding-right:0"><span class="btn btn-large btn-success">Đăng nhập / Đăng ký</span></a>
                        </li>
                    }

                </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Header End====================================================================== -->
    @if (ViewBag.Title == "trangChu")
    {
        <div id="carouselBlk">
            <div id="myCarousel" class="carousel slide">
                <div class="carousel-inner">
                    <div class="item active">
                        <div class="container">
                            <img style="width:100%" src="/Content/themes/images/carousel/1.png" alt="special offers" />

                        </div>
                    </div>
                    <div class="item">
                        <div class="container">
                            <img style="width:100%" src="/Content/themes/images/carousel/2.png" alt="" />

                        </div>
                    </div>
                    <div class="item">
                        <div class="container">
                            <img src="/Content/themes/images/carousel/3.png" alt="" />

                        </div>
                    </div>

                </div>
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
            </div>
        </div>
    }
    <div id="mainBody">
        <div class="container">
            <div class="row">
                <!-- Sidebar ================================================== -->
                <div id="sidebar" class="span3">
                    <br />
                    <ul id="sideManu" class="nav nav-tabs nav-stacked">
                        <li>
                            <a href="@Url.Action("trangTimKiem", "Guest")">TẤT CẢ SẢN PHẨM</a>
                        </li>
                    </ul>
                    <br />
                    <strong>DANH MỤC SẢN PHẨM</strong>
                    <ul id="sideManu" class="nav nav-tabs nav-stacked">
                        @Html.Action("_Layout_trangChu_DanhMucSP", "Guest")
                    </ul>
                    <br>
                    <strong>HÃNG SẢN XUẤT</strong>
                    <ul id="sideManu" class="nav nav-tabs nav-stacked">

                        @Html.Action("_Layout_trangChu_HangSX", "Guest")
                    </ul>
                </div>
                <!-- Sidebar end=============================================== -->
                @RenderBody()
            </div>
        </div>
    </div>
    <!-- Footer ================================================================== -->
    <div id="footerSection">
        <div class="container">
            <div class="row">
                <div class="span3">
                    <h5>CỬA HÀNG 1</h5>
                    <a>Số điện thoại: 08 99000001</a>
                    <a>Thời gian làm việc: T2-Chủ nhật, 8h30-18h30</a>
                    <a>Địa chỉ: 384/8 Cộng Hòa, P.13, Q. Tân Bình, TP.HCM</a>
                </div>
                <div class="span3">
                    <h5>CỬA HÀNG 2</h5>
                    <a>Số điện thoại: 08 99000002</a>
                    <a>Thời gian làm việc: T2-Chủ nhật, 9h00-19h00</a>
                    <a>Địa chỉ: 474 Điện Biên Phủ, P. 17, Q. Bình Thạnh, TP.HCM</a>
                </div>
                <div class="span3">
                    <h5>CỬA HÀNG 3</h5>
                    <a>Số điện thoại:08 99000003</a>
                    <a>Thời gian làm việc: T2-4-5-6-7-CN, 9h00-18h30</a>
                    <a>Địa chỉ: 344 Lãnh Binh Thăng , P. 11 , Q.11, TP.HCM</a>
                </div>
                <div id="socialMedia" class="span3 pull-right">
                    <h5>MẠNG XÃ HỘI </h5>
                    <a href="#"><img width="60" height="60" src="/Content/themes/images/facebook.png" title="facebook" alt="facebook" /></a>
                    <a href="#"><img width="60" height="60" src="/Content/themes/images/twitter.png" title="twitter" alt="twitter" /></a>
                    <a href="#"><img width="60" height="60" src="/Content/themes/images/youtube.png" title="youtube" alt="youtube" /></a>
                    <br>
                </div>
            </div>
            <p class="pull-right">&copy; Cửa hàng linh kiện PC START &reg; 2018 - 2022 </p>
        </div><!-- Container End -->
    </div>
    <!-- Placed at the end of the document so the pages load faster ============================================= -->
    <script src="/Content/themes/js/jquery.js" type="text/javascript"></script>
    <script src="/Content/themes/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/Content/themes/js/google-code-prettify/prettify.js"></script>

    <script src="/Content/themes/js/bootshop.js"></script>
    <script src="/Content/themes/js/jquery.lightbox-0.5.js"></script>

    @if (ViewBag.thongBao != null)
    {
        <script id="thongbao" type="text/javascript">
        window.onload = function () {
            alert("@Html.Raw(ViewBag.thongBao)");
    };
        </script>
    }

    <script>
        let tagArr = document.getElementsByTagName("input");
        for (let i = 0; i < tagArr.length; i++) {
            tagArr[i].autocomplete = 'off';
        }
    </script>

    <!-- Themes switcher section ============================================================================================= -->
</body>
</html>